<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_105dp"/>

    <TextView
        android:id="@+id/tv_card_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_26dp"
        tools:text="写卡失败"
        android:textSize="@dimen/sp_20"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/text_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_card"
        />

    <TextView
        android:id="@+id/tv_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:visibility="gone"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_card_status"/>

    <TextView
        android:id="@+id/btn_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activation_back"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:textSize="@dimen/sp_18"
        android:background="@drawable/bg_login_btn"
        android:paddingTop="@dimen/margin_12dp"
        android:paddingBottom="@dimen/margin_12dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_card"/>

    <View
        android:id="@+id/card_view1"
        android:layout_width="@dimen/margin_50dp"
        android:layout_height="@dimen/margin_0.5dp"
        android:background="@color/mine_login"
        android:visibility="gone"
        android:layout_marginTop="@dimen/margin_40dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        app:layout_constraintEnd_toStartOf="@id/card_tips_title"
        app:layout_constraintTop_toBottomOf="@id/btn_card"/>

    <TextView
        android:id="@+id/card_tips_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_tips"
        android:layout_marginTop="@dimen/margin_30dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_card"/>

    <View
        android:id="@+id/card_view2"
        android:layout_width="@dimen/margin_50dp"
        android:layout_height="@dimen/margin_0.5dp"
        android:background="@color/mine_login"
        android:layout_marginTop="@dimen/margin_40dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/card_tips_title"
        app:layout_constraintTop_toBottomOf="@id/btn_card"/>

    <TextView
        android:id="@+id/tv_card_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_card_tips"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_tips_title"/>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.home.HomeFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_home_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_30dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:src="@mipmap/icon_user_head"/>

        <TextView
            android:id="@+id/txt_telphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_into"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold"
            android:textColor="@color/text_black_2"
            app:layout_constraintStart_toEndOf="@id/logo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/margin_42dp"
            android:layout_marginStart="@dimen/margin_16dp"
            />

        <ImageView
            android:id="@+id/iv_login_into"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_login_into"
            android:layout_marginTop="@dimen/margin_48dp"
            android:layout_marginStart="@dimen/margin_3dp"
            app:layout_constraintStart_toEndOf="@id/txt_telphone"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_home_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_home_service"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:padding="@dimen/margin_10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_home"
            android:layout_marginTop="@dimen/margin_35dp"
            android:paddingStart="@dimen/margin_10dp"
            android:paddingEnd="@dimen/margin_10dp"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/card_activation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/logo"
                android:layout_marginTop="@dimen/margin_8dp"
                android:src="@mipmap/card_activation"/>

            <ImageView
                android:id="@+id/recharge_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/card_activation"
                android:layout_marginTop="@dimen/margin_8dp"
                android:src="@mipmap/recharge_payment"/>

            <ImageView
                android:id="@+id/balance_query"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/recharge_payment"
                android:layout_marginTop="@dimen/margin_8dp"
                android:src="@mipmap/balance_query"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
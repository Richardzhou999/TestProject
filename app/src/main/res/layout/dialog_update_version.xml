<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_version"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/icon_update">

    <TextView
        android:id="@+id/tv_version_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发现新版本!"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_30dp"/>

    <TextView
        android:id="@+id/new_version_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_60dp"/>

    <TextView
        android:id="@+id/sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="@dimen/margin_20dp"
        android:layout_marginStart="@dimen/margin_30dp"
        android:layout_marginEnd="@dimen/margin_30dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/bg_update"
        android:text="确认更新" />



    <com.uwei.commom.widget.CustomProgressBar
        android:id="@+id/download_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/margin_50dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="@dimen/margin_15dp"
        android:layout_marginEnd="@dimen/margin_15dp"
        android:progressDrawable="@drawable/progress_bar"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新版本正在火速下载中，请耐心等候"
        android:textSize="@dimen/sp_16"
        android:layout_gravity="bottom|center"
        android:textColor="@color/grey_999999"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/margin_10dp"/>


</FrameLayout>